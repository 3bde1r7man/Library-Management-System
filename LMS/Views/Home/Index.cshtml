@{
    ViewData["Title"] = "Home Page";
}


<div class="container">
	<div class="row">
		@foreach (var item in Model)
		{
			<div class="col-md-4">
				<div class="card">
					<div class="card-body">
						<h5 class="card-title text-center">@item.Title</h5>
						<p class="card-text truncate-description">@item.Description</p>
						<p class="card-text">@item.Year</p>
						<a asp-controller="Books" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">View Book</a>
					</div>
				</div>
			</div>
		}
	</div>
</div>